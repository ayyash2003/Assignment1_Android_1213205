<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainVideob">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="20dp"
                >
                <VideoView
                    android:id="@+id/videoViewb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="So"
                android:textColor="#11221B"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoViewb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Will and going to"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoViewb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Since and for"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="10dp">
                <VideoView
                    android:id="@+id/videoViewb4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Used to"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="10dp">
                <VideoView
                    android:id="@+id/videoViewb5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep your eyes peeled"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="10dp"/>
            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="400dp"
                android:layout_margin="10dp">
                <VideoView
                    android:id="@+id/videoViewb6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Break a leg"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>