<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainVideo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gimme"
                android:textColor="#3DE1D3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kn"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Months"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Information"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It is raining cats and dogs"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:layout_margin="20dp">
                <VideoView
                    android:id="@+id/videoView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a piece of cake"
                android:textColor="#44A379"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>