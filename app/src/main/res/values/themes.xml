<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Assignment1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Assignment1" parent="Base.Theme.Assignment1" />
    <style name="buttonStyle">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="Title">
        <item name="android:background">#2E4E4A</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_first">
        <item name="android:textColor">#333333</item>
    </style>
    <style name="sign_in">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="sign_up">
        <item name="android:background">#EFF6FF</item>
    </style>
    <style name="sign_up_text">
        <item name="android:textColor">#004A80</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">20dp</item>

    </style>
    <style name="edit_text_signup">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">15dp</item>

    </style>
    <style name="user_name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="explain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#003366</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="grammer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">Grammer</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0303CD</item>


    </style>
</resources>